{
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "typescript": "^5.1.6"
  },
  "name": "sedacmanager",
  "productName": "SEDAC-manager",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "author": "Daniel Pojhan <danpojhan@gmail.com>",
  "homepage": "https://github.com/HelloWorld7894/SEDAC",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "npx tsc main.ts && electron .",
    "build": "electron-builder build -wl",
    "clear": "rm -rf ./build/* && touch ./build/.gitkeep"
  },
  "build": {
    "appId": "com.sedacmanager.app",
    "directories":{
      "output": "./build/",
      "buildResources": "resources"
    },
    "extraResources": [
      {
        "from": "./res/img/",
        "to": "img"
      },
      {
        "from": "./res/data/",
        "to": "data"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "./res/img/sedac-manager-logo.ico"
    },
    "linux":{
      "target": "deb",
      "icon": "./res/img/sedac-manager-logo.png"
    }
  }
}
